
.source_item_content {
  width: 100%;
  height: 230rpx;
  border-bottom: 2rpx solid lightgray;
  display: flex;
  flex-direction: row;
  padding: 2rpx;
}
.image_content {
  width: 250rpx;
  height: 200rpx;
  margin: 10rpx 20rpx;
}

.image_content_pic {
  width: 100%;
  height: 100%;
  border-radius: 14rpx;
}

.info_content {
  width: 400rpx;
  height: 220rpx;
  margin-left: 20rpx;
  justify-content:flex-start;
  align-items:flex-start;
  margin-top: -30rpx;

}

.title_content {
  height: 140rpx;
  width: 400rpx;
  word-wrap: break-word;
  word-break: break-all;
  overflow:hidden;
  margin: 0;
  padding: 0;
}
.title{
  font-size: 36rpx;
  font-weight: 500;
}
.nums_content{
  word-wrap: break-word;
  word-break: break-all;
  overflow:hidden;
}
.stuNums{
  display: inline-flex;
  color: #ff5000
}
.nums{
   display: inline-flex;
   color: lightgray
}